@model IEnumerable<MVCMockDemo.Models.Movie>


<form asp-controller="Movie" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="SearchQuery" />
    </p>

    <select id="category" name="category">
        <option value="0">All</option>
        <option value="1">Action</option>
        <option value="2">Drama</option>
        <option value="3">Thriller</option>
    </select>

    <input type="submit" value="Search" />
</form>

<button><a asp-action="Create" asp-controller="Movie" style="text-decoration:none">Create</a></button>

<div class="row" style="margin:40px">
    @foreach (var movie in Model)
    {
        @Html.Partial("_MovieCard", movie)
    }
</div>